<%include ../partials/header%>

<div class="container">
    <h1 style="text-align:center">Edit <%=campground.name%></h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/campground/<%=campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" name="campground[image]" class="form-control" value="<%= campground.image%>">
            </div>
            <div class="form-group">
                <input type="text" name="campground[description]" class="form-control" value="<%= campground.description%>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    <a href="/campground/<%= campground._id%>">Go back</a>
    </div>
    
</div>

<%include ../partials/footer%>

